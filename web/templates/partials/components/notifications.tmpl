{{ define "component_notifications_shell" }}
<div id="notification-shell" class="relative" data-notification-shell data-open="{{ if .Open }}true{{ else }}false{{ end }}">
  <button
    type="button"
    class="relative inline-flex items-center justify-center rounded-full p-2 text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2"
    data-notification-toggle
    data-open="{{ if .Open }}true{{ else }}false{{ end }}"
    hx-get="/frags/notifications/list?open={{ if .Open }}0{{ else }}1{{ end }}"
    hx-target="closest [data-notification-shell]"
    hx-swap="outerHTML"
    aria-label="{{ tlang .Lang "nav.notifications" }}"
    aria-expanded="{{ if .Open }}true{{ else }}false{{ end }}"
    aria-haspopup="true"
    aria-controls="notifications-menu">
    <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <path d="M18 8a6 6 0 10-12 0c0 7-3 7-3 7h18s-3 0-3-7" />
      <path d="M13.73 21a2 2 0 01-3.46 0" />
    </svg>
    <span class="sr-only">{{ .BadgeLabel }}</span>
    {{ if gt .UnreadCount 0 }}
    <span class="absolute -top-0.5 -right-0.5 inline-flex h-5 min-w-[1.25rem] items-center justify-center rounded-full bg-red-500 px-1 text-xs font-semibold text-white" data-notification-badge>{{ .BadgeDisplay }}</span>
    {{ end }}
  </button>
  {{ if .Open }}
  <div
    id="notifications-menu"
    role="menu"
    aria-label="{{ tlang .Lang "nav.notifications" }}"
    class="absolute right-0 z-40 mt-3 w-80 origin-top-right rounded-xl border border-gray-200 bg-white shadow-xl focus:outline-none"
    data-notification-dropdown>
    <div class="flex items-center justify-between px-4 pt-4 pb-3">
      <h2 class="text-sm font-semibold text-gray-900">{{ tlang .Lang "nav.notifications" }}</h2>
      <span class="text-xs text-gray-500">{{ .BadgeLabel }}</span>
    </div>
    {{ if .Items }}
    <ul class="max-h-96 overflow-y-auto border-t border-gray-100" data-notification-list>
      {{ range $i, $item := .Items }}
      <li class="border-b border-gray-100 last:border-b-0" data-notification-item data-unread="{{ if not $item.Read }}true{{ else }}false{{ end }}">
        <article class="px-4 py-3 {{ if not $item.Read }}bg-indigo-50{{ else }}bg-white{{ end }}">
          <div class="flex items-start gap-3">
            <span class="mt-1 inline-flex h-2 w-2 flex-shrink-0 rounded-full {{ if not $item.Read }}bg-indigo-500{{ else }}bg-gray-300{{ end }}" aria-hidden="true"></span>
            <div class="min-w-0 flex-1">
              <p class="text-sm font-medium text-gray-900">{{ $item.Title }}</p>
              <p class="mt-1 text-sm text-gray-600">{{ $item.Body }}</p>
              <div class="mt-2 flex flex-wrap items-center gap-2 text-xs text-gray-500">
                <span>{{ $item.TimeLabel }}</span>
                {{ if not $item.Read }}
                <span class="inline-flex items-center gap-1 rounded-full bg-indigo-100 px-2 py-0.5 text-[11px] font-medium text-indigo-700">{{ $item.UnreadLabel }}</span>
                {{ end }}
              </div>
            </div>
          </div>
          <div class="mt-3 flex flex-wrap items-center gap-2">
            <a
              href="{{ $item.Href }}"
              class="inline-flex items-center gap-1 rounded-full border border-gray-200 px-3 py-1 text-xs font-medium text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
              data-notification-action>{{ $item.ViewLabel }}</a>
            {{ if not $item.Read }}
            <form
              method="post"
              hx-post="/notifications/{{ $item.ID }}:read"
              hx-target="closest [data-notification-shell]"
              hx-swap="outerHTML"
              class="inline-flex">
              <button
                type="submit"
                class="inline-flex items-center gap-1 rounded-full bg-indigo-600 px-3 py-1 text-xs font-medium text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">{{ $item.MarkReadLabel }}</button>
            </form>
            {{ end }}
          </div>
        </article>
      </li>
      {{ end }}
    </ul>
    {{ else }}
    <div class="border-t border-gray-100 px-4 py-6 text-sm text-gray-500">{{ .EmptyMessage }}</div>
    {{ end }}
    <div class="border-t border-gray-100 px-4 py-3">
      <a
        href="{{ .ViewAllHref }}"
        class="inline-flex w-full justify-center rounded-full bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">{{ .ViewAllLabel }}</a>
    </div>
  </div>
  {{ end }}
</div>
{{ end }}
