{{ define "frag_account_order_tracking" }}
{{ $view := . }}
<div class="space-y-6 p-5">
  <section class="space-y-3 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm">
    <header class="flex flex-wrap items-center justify-between gap-3">
      <div>
        <h3 class="text-sm font-semibold text-gray-900">{{ if eq $view.Lang "ja" }}配送状況{{ else }}Shipments{{ end }}</h3>
        <p class="text-xs text-gray-500">{{ if eq $view.Lang "ja" }}最新スキャンや到着予定{{ else }}Latest scans and ETAs{{ end }}</p>
      </div>
      <span class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1 text-xs text-gray-600">
        {{ len $view.Shipments }} {{ if eq $view.Lang "ja" }}件{{ else }}shipments{{ end }}
      </span>
    </header>

    <div class="grid gap-4 lg:grid-cols-2">
      {{ range $shipment := $view.Shipments }}
        {{ $tone := "border-gray-200 bg-gray-50" }}
        {{ if eq $shipment.StatusTone "success" }}{{ $tone = "border-emerald-200 bg-emerald-50/70" }}{{ else if eq $shipment.StatusTone "info" }}{{ $tone = "border-sky-200 bg-sky-50/70" }}{{ else if eq $shipment.StatusTone "danger" }}{{ $tone = "border-rose-200 bg-rose-50/70" }}{{ else if eq $shipment.StatusTone "muted" }}{{ $tone = "border-gray-200 bg-gray-50" }}{{ end }}
        <article class="space-y-3 rounded-2xl border {{ $tone }} p-4 text-sm">
          <div class="flex items-center justify-between gap-3">
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-gray-500">{{ $shipment.Carrier }} · {{ $shipment.Service }}</p>
              <p class="font-semibold text-gray-900">{{ $shipment.TrackingID }}</p>
            </div>
            <span class="inline-flex items-center rounded-full bg-white/90 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-gray-700 shadow">
              {{ $shipment.StatusLabel }}
            </span>
          </div>
          <div class="text-xs text-gray-600">
            <p>{{ if eq $view.Lang "ja" }}最終スキャン{{ else }}Last scan{{ end }}: {{ $shipment.LastScan }}</p>
            <p>{{ if eq $view.Lang "ja" }}予定日{{ else }}ETA{{ end }}: {{ fmtDate $shipment.EstimatedAt $view.Lang }}</p>
          </div>
          {{ if $shipment.Packages }}
            <ul class="space-y-2 rounded-xl border border-dashed border-gray-200 bg-white/70 p-3 text-xs text-gray-600">
              {{ range $pkg := $shipment.Packages }}
                <li>
                  <p class="font-semibold text-gray-800">{{ $pkg.Label }}</p>
                  <p class="text-[11px]">
                    {{ range $idx, $content := $pkg.Contents }}
                      {{ if $idx }}, {{ end }}{{ $content }}
                    {{ end }}
                  </p>
                  <p class="text-[11px] text-gray-500">{{ $pkg.Weight }} · {{ $pkg.Dimensions }}</p>
                </li>
              {{ end }}
            </ul>
          {{ end }}
          <div class="flex flex-wrap items-center justify-between gap-2 text-xs">
            <a href="{{ $shipment.TrackingURL }}" class="inline-flex items-center gap-1 text-indigo-600 hover:text-indigo-500">
              {{ template "icon" (dict "Name" "arrow-top-right-on-square" "Class" "h-3 w-3") }}
              {{ if eq $view.Lang "ja" }}詳細を表示{{ else }}View details{{ end }}
            </a>
            <span class="text-gray-500">{{ $shipment.SpecialHandler }}</span>
          </div>
        </article>
      {{ end }}
    </div>
  </section>

  <section class="space-y-4 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm">
    <h3 class="text-sm font-semibold text-gray-900">{{ if eq $view.Lang "ja" }}タイムライン{{ else }}Timeline{{ end }}</h3>
    <ol class="space-y-4">
      {{ range $event := $view.Timeline }}
        {{ $tone := "border-gray-200 bg-gray-50" }}
        {{ if eq $event.Tone "success" }}{{ $tone = "border-emerald-200 bg-emerald-50/70" }}{{ else if eq $event.Tone "info" }}{{ $tone = "border-sky-200 bg-sky-50/70" }}{{ else if eq $event.Tone "warning" }}{{ $tone = "border-amber-200 bg-amber-50/70" }}{{ else if eq $event.Tone "danger" }}{{ $tone = "border-rose-200 bg-rose-50/70" }}{{ end }}
        <li class="rounded-2xl border {{ $tone }} p-4 text-sm">
          <div class="flex items-center gap-2 text-xs font-semibold uppercase tracking-wide">
            <span class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-white shadow ring-1 ring-black/5">
              {{ template "icon" (dict "Name" $event.Icon "Class" "h-4 w-4 text-gray-500") }}
            </span>
            <span>{{ $event.Title }}</span>
          </div>
          <p class="mt-2 text-sm text-gray-700">{{ $event.Body }}</p>
          <p class="mt-2 text-xs text-gray-500">{{ fmtDate $event.Timestamp $view.Lang }} · {{ $event.Actor }}</p>
        </li>
      {{ end }}
    </ol>
    <p class="text-xs text-gray-500">{{ $view.SupportNote }}</p>
  </section>
</div>
{{ end }}
