{{ define "frag_account_order_production" }}
{{ $view := . }}
<div class="space-y-6 p-5">
  <section class="rounded-2xl border border-gray-200 bg-white p-5 shadow-sm">
    <header class="mb-4 flex flex-wrap items-center justify-between gap-3">
      <div>
        <h3 class="text-sm font-semibold text-gray-900">{{ if eq $view.Lang "ja" }}生産状況{{ else }}Production overview{{ end }}</h3>
        <p class="text-xs text-gray-500">{{ if eq $view.Lang "ja" }}最新のキャパシティと指標{{ else }}Latest capacity signals{{ end }}</p>
      </div>
      <span class="text-xs text-gray-500">{{ if eq $view.Lang "ja" }}更新{{ else }}Updated{{ end }} {{ fmtDate $view.LastUpdated $view.Lang }}</span>
    </header>
    <div class="grid gap-4 md:grid-cols-3">
      {{ range $metric := $view.Overview }}
        <div class="rounded-2xl border border-indigo-100 bg-indigo-50/60 px-4 py-3 text-sm text-indigo-900">
          <p class="text-xs font-semibold uppercase tracking-wide">{{ $metric.Label }}</p>
          <p class="mt-1 text-2xl font-semibold">{{ $metric.Value }}</p>
          <p class="mt-2 text-xs opacity-80">{{ $metric.Note }}</p>
        </div>
      {{ end }}
    </div>
  </section>

  <section class="space-y-4 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm">
    <h3 class="text-sm font-semibold text-gray-900">{{ if eq $view.Lang "ja" }}ワークストリーム{{ else }}Workstreams{{ end }}</h3>
    <ul class="space-y-3">
      {{ range $ws := $view.Workstreams }}
        {{ $bar := "bg-gray-200" }}
        {{ if eq $ws.StageTone "success" }}{{ $bar = "bg-emerald-500" }}{{ else if eq $ws.StageTone "info" }}{{ $bar = "bg-sky-500" }}{{ else if eq $ws.StageTone "indigo" }}{{ $bar = "bg-indigo-500" }}{{ else if eq $ws.StageTone "danger" }}{{ $bar = "bg-rose-500" }}{{ end }}
        <li class="space-y-3 rounded-2xl border border-gray-100 bg-gray-50 px-4 py-3 text-sm text-gray-700">
          <div class="flex flex-wrap items-center justify-between gap-3">
            <div>
              <p class="text-xs font-semibold uppercase tracking-wide text-gray-500">{{ $ws.Name }}</p>
              <p class="text-sm font-semibold text-gray-900">{{ $ws.Stage }}</p>
            </div>
            <div class="text-right text-xs text-gray-500">
              <p>{{ if eq $view.Lang "ja" }}担当{{ else }}Owner{{ end }}: {{ $ws.Owner }}</p>
              <p>{{ if eq $view.Lang "ja" }}期限{{ else }}Due{{ end }}: {{ fmtDate $ws.DueDate $view.Lang }}</p>
            </div>
          </div>
          <div class="relative h-2 w-full rounded-full bg-gray-200">
            <div class="absolute inset-y-0 left-0 rounded-full {{ $bar }}" style="width: {{ $ws.Progress }}%;"></div>
          </div>
          {{ if $ws.Notes }}
            <ul class="space-y-1 text-xs text-gray-500">
              {{ range $note := $ws.Notes }}
                <li class="flex gap-2">
                  <span class="mt-1 h-1.5 w-1.5 flex-none rounded-full bg-indigo-400"></span>
                  <span>{{ $note }}</span>
                </li>
              {{ end }}
            </ul>
          {{ end }}
        </li>
      {{ end }}
    </ul>
  </section>

  <section class="space-y-4 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm">
    <h3 class="text-sm font-semibold text-gray-900">{{ if eq $view.Lang "ja" }}タイムライン{{ else }}Timeline{{ end }}</h3>
    <ol class="space-y-4">
      {{ range $event := $view.Timeline }}
        {{ $tone := "border-gray-200 bg-gray-50" }}
        {{ if eq $event.Tone "success" }}{{ $tone = "border-emerald-200 bg-emerald-50/70" }}{{ else if eq $event.Tone "info" }}{{ $tone = "border-sky-200 bg-sky-50/70" }}{{ else if eq $event.Tone "warning" }}{{ $tone = "border-amber-200 bg-amber-50/70" }}{{ else if eq $event.Tone "danger" }}{{ $tone = "border-rose-200 bg-rose-50/70" }}{{ end }}
        <li class="rounded-2xl border {{ $tone }} p-4 text-sm">
          <div class="flex items-center gap-2 text-xs font-semibold uppercase tracking-wide">
            <span class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-white shadow ring-1 ring-black/5">
              {{ template "icon" (dict "Name" $event.Icon "Class" "h-4 w-4 text-gray-500") }}
            </span>
            <span>{{ $event.Title }}</span>
          </div>
          <p class="mt-2 text-sm text-gray-700">{{ $event.Body }}</p>
          <p class="mt-2 text-xs text-gray-500">{{ fmtDate $event.Timestamp $view.Lang }} · {{ $event.Actor }}</p>
        </li>
      {{ end }}
    </ol>
  </section>
</div>
{{ end }}
