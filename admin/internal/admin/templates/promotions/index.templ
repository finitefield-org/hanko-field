templ Index(data PageData) {
	@layouts.Base(data.Title, data.Breadcrumbs, pageBody(data))
}

templ pageBody(data PageData) {
	<div class="space-y-6" data-promotions-root>
		<section class="rounded-2xl bg-white px-6 py-6 shadow-sm ring-1 ring-slate-200">
			<div class="flex flex-col gap-4 lg:flex-row lg:items-start lg:justify-between">
				<div class="space-y-2">
					<h1 class="text-2xl font-semibold text-slate-900">{ data.Title }</h1>
					<p class="text-sm text-slate-600">{ data.Description }</p>
				</div>
				if len(data.Metrics) > 0 {
					<div class="grid w-full gap-3 sm:grid-cols-2 lg:w-auto lg:grid-cols-3">
						for _, metric := range data.Metrics {
							<div class="flex flex-col gap-1 rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm text-slate-600 shadow-sm">
								<div class="flex items-center gap-2 text-xs font-semibold uppercase tracking-wide text-slate-500">
									if metric.Icon != "" {
										<span aria-hidden="true">{ metric.Icon }</span>
									}
									{ metric.Label }
								</div>
								<div class="text-xl font-semibold text-slate-900">{ metric.Value }</div>
								if metric.SubText != "" {
									<p class="text-xs text-slate-500">{ metric.SubText }</p>
								}
							</div>
						}
					</div>
				}
			</div>
			<div class="mt-6 border-t border-slate-200 pt-4">
				@filterToolbar(data)
			</div>
		</section>

		<div class="grid gap-6 xl:grid-cols-[minmax(0,1fr)_360px]">
			<section class="flex flex-col gap-4">
				if data.Toolbar.SelectedCount > 0 {
					@components.BulkActionToolbar(data.Toolbar)
				}
				<div
					id="promotions-table"
					class="space-y-4"
					data-promotions-table
					hx-target="this"
					hx-swap="outerHTML"
				>
					@Table(data.Table)
				</div>
			</section>
			<aside class="hidden xl:block">
				<div class="sticky top-20 space-y-4">
					@Drawer(data.Drawer)
				</div>
			</aside>
		</div>
	</div>
}

