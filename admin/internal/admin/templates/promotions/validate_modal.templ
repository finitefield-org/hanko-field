package promotions

import (
    "fmt"

    "finitefield.org/hanko-admin/internal/admin/templates/components"
    "finitefield.org/hanko-admin/internal/admin/templates/helpers"
    "finitefield.org/hanko-admin/internal/admin/templates/layouts"
)

const validationInputClass = "w-full rounded-lg border border-slate-300 px-3 py-2 text-sm text-slate-700 shadow-sm focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-200"

templ ValidationModal(data ValidationModalData) {
    @layouts.Modal(data.Title, validationModalBody(data))
}

templ validationModalBody(data ValidationModalData) {
    <form class="space-y-6 text-sm text-slate-700" hx-post={ data.ActionURL } hx-target="#modal" hx-swap="innerHTML" method={ data.Method }>
        <input type="hidden" name="csrf_token" value={ data.CSRFToken } />
        <input type="hidden" name="promotionID" value={ data.Form.PromotionID } />

        <section class="space-y-3">
            <header class="space-y-1">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">検証対象</p>
                <div class="flex flex-wrap items-center gap-2">
                    <span class="text-base font-semibold text-slate-900">{ data.PromotionLabel }</span>
                    if data.PromotionCode != "" {
                        @components.Badge(data.PromotionCode, "info")
                    }
                </div>
                <p class="text-xs text-slate-500">仮想カートの条件を入力して、ルール別の通過状況を確認できます。</p>
            </header>

            if data.Error != "" {
                <div class="rounded-lg border border-rose-200 bg-rose-50 px-3 py-2 text-sm text-rose-700">{ data.Error }</div>
            }

            <div class="grid gap-4 md:grid-cols-3">
                <div>
                    <label class="flex flex-col gap-1 text-sm text-slate-600">
                        <span class="text-xs font-semibold uppercase tracking-wide text-slate-500">仮想小計 (税込)</span>
                        <input
                            type="number"
                            name="subtotal"
                            min="0"
                            step="1"
                            value={ data.Form.Subtotal }
                            class={ validationInputClass }
                            placeholder="15000"
                        />
                    </label>
                    if err := validationFieldError(data.FieldErrors, "subtotal"); err != "" {
                        <p class="mt-1 text-xs text-rose-600">{ err }</p>
                    }
                </div>
                <div>
                    <label class="flex flex-col gap-1 text-sm text-slate-600">
                        <span class="text-xs font-semibold uppercase tracking-wide text-slate-500">通貨</span>
                        <input
                            type="text"
                            name="currency"
                            value={ data.Form.Currency }
                            class={ validationInputClass }
                            placeholder="JPY"
                        />
                    </label>
                </div>
                <div>
                    <label class="flex flex-col gap-1 text-sm text-slate-600">
                        <span class="text-xs font-semibold uppercase tracking-wide text-slate-500">顧客セグメントキー</span>
                        <input
                            type="text"
                            name="segmentKey"
                            value={ data.Form.SegmentKey }
                            class={ validationInputClass }
                            placeholder="vip_retention"
                        />
                    </label>
                </div>
            </div>

            <section class="space-y-2">
                <div class="flex flex-col gap-1 sm:flex-row sm:items-center sm:justify-between">
                    <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">カート商品 (SKU / 数量 / 単価)</p>
                    <p class="text-xs text-slate-500">{ fmt.Sprintf("最大%d件まで入力できます。", data.MaxItems) }</p>
                </div>
                <div class="space-y-3">
                    for idx, sku := range data.Form.ItemSKUs {
                        <div class="grid gap-3 rounded-xl border border-slate-200 bg-white/80 p-3 shadow-xs md:grid-cols-[2fr_1fr_1fr]">
                            <div>
                                <label class="flex flex-col gap-1 text-sm text-slate-600">
                                    <span class="text-xs font-semibold uppercase tracking-wide text-slate-500">SKU</span>
                                    <input type="text" name="itemSKU" value={ sku } class={ validationInputClass } placeholder="SKU-1234" />
                                </label>
                                if err := validationItemFieldError(data.FieldErrors, "sku", idx); err != "" {
                                    <p class="mt-1 text-xs text-rose-600">{ err }</p>
                                }
                            </div>
                            <div>
                                <label class="flex flex-col gap-1 text-sm text-slate-600">
                                    <span class="text-xs font-semibold uppercase tracking-wide text-slate-500">数量</span>
                                    <input type="number" name="itemQuantity" min="1" step="1" value={ validationValueAt(data.Form.ItemQuantities, idx) } class={ validationInputClass } placeholder="1" />
                                </label>
                                if err := validationItemFieldError(data.FieldErrors, "quantity", idx); err != "" {
                                    <p class="mt-1 text-xs text-rose-600">{ err }</p>
                                }
                            </div>
                            <div>
                                <label class="flex flex-col gap-1 text-sm text-slate-600">
                                    <span class="text-xs font-semibold uppercase tracking-wide text-slate-500">単価</span>
                                    <input type="number" name="itemPrice" min="0" step="1" value={ validationValueAt(data.Form.ItemPrices, idx) } class={ validationInputClass } placeholder="8000" />
                                </label>
                                if err := validationItemFieldError(data.FieldErrors, "price", idx); err != "" {
                                    <p class="mt-1 text-xs text-rose-600">{ err }</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </section>
        </section>

        <div class="flex flex-col gap-3 pt-2 sm:flex-row sm:items-center sm:justify-end">
            <button type="button" class={ helpers.ButtonClass("ghost", "md", false, false) } data-modal-close>閉じる</button>
            <button type="submit" class={ helpers.ButtonClass("primary", "md", false, false) }>検証を実行</button>
        </div>

        if data.Result != nil {
            <section class="space-y-4 rounded-2xl border border-slate-200 bg-slate-50 p-4">
                <header class="flex flex-wrap items-center justify-between gap-3">
                    <div class="flex flex-wrap items-center gap-2">
                        @components.Badge(validationResultLabel(data.Result.Eligible), validationResultTone(data.Result.Eligible))
                        <span class="text-xs text-slate-500">{ helpers.Date(data.Result.ExecutedAt, "2006-01-02 15:04") }</span>
                    </div>
                    <p class="text-sm font-medium text-slate-700">{ data.Result.Summary }</p>
                </header>

                if len(data.Result.Blockers) > 0 {
                    <div class="rounded-lg border border-amber-200 bg-amber-50 px-3 py-2 text-sm text-amber-700">
                        <p class="font-semibold">阻害要因</p>
                        <ul class="list-disc space-y-1 pl-5">
                            for _, blocker := range data.Result.Blockers {
                                <li>{ blocker }</li>
                            }
                        </ul>
                    </div>
                }

                <div class="overflow-hidden rounded-xl border border-slate-200 bg-white">
                    <table class="w-full text-left text-sm text-slate-700">
                        <thead class="bg-slate-100 text-xs uppercase tracking-wide text-slate-500">
                            <tr>
                                <th class="px-4 py-2">ルール</th>
                                <th class="px-4 py-2">結果</th>
                                <th class="px-4 py-2">詳細</th>
                            </tr>
                        </thead>
                        <tbody>
                            for _, rule := range data.Result.Rules {
                                <tr class="border-t border-slate-200">
                                    <td class="px-4 py-3 font-medium text-slate-800">{ rule.Label }</td>
                                    <td class="px-4 py-3">
                                        @components.Badge(validationRuleBadge(rule), validationRuleTone(rule))
                                    </td>
                                    <td class="px-4 py-3 text-sm text-slate-600">{ rule.Message }</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="space-y-2">
                    <label for="promotion-validation-json" class="text-xs font-semibold uppercase tracking-wide text-slate-500">APIレスポンス (JSON)</label>
                    <textarea
                        id="promotion-validation-json"
                        class="h-40 w-full rounded-lg border border-slate-300 bg-slate-900/90 px-3 py-2 font-mono text-xs text-emerald-100"
                        readonly
                    >{ data.Result.RawJSON }</textarea>
                    <p class="text-xs text-slate-500">上記のJSONを選択してコピーできます。</p>
                </div>
            </section>
        }
    </form>
}

func validationFieldError(errors map[string]string, key string) string {
    if errors == nil {
        return ""
    }
    return errors[key]
}

func validationItemFieldError(errors map[string]string, kind string, idx int) string {
    if errors == nil {
        return ""
    }
    return errors[fmt.Sprintf("item_%s_%d", kind, idx)]
}

func validationValueAt(values []string, idx int) string {
    if idx < 0 || idx >= len(values) {
        return ""
    }
    return values[idx]
}

func validationResultTone(eligible bool) string {
    if eligible {
        return "success"
    }
    return "danger"
}

func validationResultLabel(eligible bool) string {
    if eligible {
        return "適用可能"
    }
    return "適用不可"
}

func validationRuleTone(rule ValidationRuleView) string {
    if rule.Passed {
        return "success"
    }
    if rule.Blocking {
        return "danger"
    }
    return "warning"
}

func validationRuleBadge(rule ValidationRuleView) string {
    if rule.Passed {
        return "PASS"
    }
    if rule.Blocking {
        return "BLOCK"
    }
    return "WARN"
}
