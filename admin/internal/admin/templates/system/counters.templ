templ CountersPage(data CountersPageData) {
    @layouts.Base(data.Title, data.Breadcrumbs, countersPageBody(data))
}

templ countersPageBody(data CountersPageData) {
    <div class="space-y-6" data-system-counters-root>
        <section class="rounded-2xl bg-white px-6 py-6 shadow-sm ring-1 ring-slate-200">
            <div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
                <div class="space-y-2">
                    <h1 class="text-2xl font-semibold text-slate-900">{ data.Title }</h1>
                    <p class="text-sm text-slate-600">{ data.Description }</p>
                    if data.GeneratedLabel != "" {
                        <p class="text-xs text-slate-400">{ data.GeneratedLabel }</p>
                    }
                </div>
                @countersHeaderControls(data)
            </div>

            if len(data.Alerts) > 0 {
                <div class="mt-6 space-y-3">
                    for _, alert := range data.Alerts {
                        @InlineAlert(alert)
                    }
                </div>
            }
        </section>

        <div class="grid gap-6 xl:grid-cols-[minmax(0,1fr)_360px]">
            <section>
                <div
                    id="system-counters-table"
                    data-system-counters-table
                    class="space-y-4"
                    hx-get={ helpers.BuildURL(data.Table.FragmentPath, data.Query.RawQuery) }
                    hx-target="this"
                    hx-swap="outerHTML"
                    hx-trigger="refresh from:body, every 120s"
                >
                    @CountersTable(data.Table)
                </div>
            </section>
            <aside>
                <div class="sticky top-20 space-y-4">
                    <div id="system-counter-drawer" data-system-counter-drawer>
                        @CountersDrawer(data.Drawer, data.Query)
                    </div>
                </div>
            </aside>
        </div>
    </div>
}

